<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <p class="subtext-gray pb-1" style="font-size:8px">Your password be eight charcters long and must 
    contain at least one uppercase character,
    one lowercase character & a symbol. </p>

    <%= f.text_field :name, class: 'form-control', placeholder: "Name" %><br>

    <%= f.email_field :email, class: 'form-control', placeholder: "Email" %><br>

    <%= f.password_field :password, class: 'form-control', placeholder: "Password" %><br>

    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %><br>

    <%= f.submit "Submit", class: "btn btn-success btn-block" %><br>
<% end %>