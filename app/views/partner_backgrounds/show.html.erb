<% provide(:title, @partner_background.name) %>
<div class = "container partner-background-overview partner-background-overview-mobile  mt-4 justify-content-center">
  <section class= "container">
    <div class = "recipe-header pt-2">
      <div class = "row pb-5">
        <div class = "col-12 text-center pb-2">
          <h1 class= "pb-1 title-mobile"><%= @partner_background.name %> </h1>
          <i><h4 class= "subtitle-mobile"><%= @partner_background.tag_line %></h4></i>
        </div>
        <div class= "col-12 text-center recipe-header-button">
          <%= image_tag(@partner_background.thumbnail, class:"img-fluid", alt: "Product Image") %>
        </div>
        <div class = "col-12 text-center my-auto pt-2">
            <p class="description-text subtitle-description-mobile"> <%= @partner_background.description %></p>     
        </div>
      </div>
    </div>
  </section>
</div>