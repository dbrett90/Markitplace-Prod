<%= form_for(@plan_type) do |f| %>
    <p class="subtext-gray pb-1" style="font-size:14px">Only admins should be able to
    access this page. Updating Plan Types </p>

    <%= f.text_field :name, class: 'form-control', placeholder: "Name", required: true %><br>

    <%= f.text_field :description, class: 'form-control', placeholder: "Product Description", required: true %><br>

    <%= f.text_field :extended_description, class: 'form-control', placeholder: "Product Description - Number of Items" %><br>

    <%= f.text_field :city_delivery, class: 'form-control', placeholder: "Cities this product can be delivered to" %><br>

    <%= f.number_field :price, class: "form-control", placeholder: "Plan Price", required: true %><br>

    <%= f.number_field :prep_time, class: "form-control", placeholder: "Prep Time", required: true %><br>

    <%= f.number_field :servings, class: "form-control", placeholder: "Servings", required: true %><br>

    <%= f.number_field :calories, class: "form-control", placeholder: "Calories" %><br>

    <%= f.number_field :protein, class: "form-control", placeholder: "Protein" %><br>

    <%= f.number_field :fats, class: "form-control", placeholder: "Fats" %><br>

    <%= f.text_field :is_trial, class: 'form-control', placeholder: "Is this a trial? No app fee - answer yes or no", required: true %><br>

    <%= f.text_field :stripe_id, class: 'form-control', placeholder: "Stripe ID of Partner", required: true %><br>

    <%= f.label :thumbnail do %>
        <span class = 'field-label emphasis'> Plan Type Image </span><br>
    <% end %><br>
    <%= f.file_field :thumbnail, multiple: false, required: true %> <br>
    <br>

    <%= f.submit "Submit", class: "btn btn-success btn-block form-actions" %><br>
<% end %>