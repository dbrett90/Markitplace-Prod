<% provide(:title, "Meal Kits") %>
<div class="product-homepage">
    <div class="product-homepage-2019">
        <section class="jumbotron jumbotron-fluid" id='jumbotron-products'>
          <div class="container">
            <div class="row justify-content-end">
              <div class="col-12 col-lg-5 justify-content-end" id="jumbo-textbox">
                <h1 class="homepage-text shadow-underscore jumbo-maintext">THE RIGHT MEAL KIT AT THE BEST AVAILABLE PRICE</h1>
                <h3 class ="homepage-text pt-3 pb-3" id ="jumbo-subtext">Check out our offerings, who we partner with, and other relevant information
                below.</h3>
              </div>
            </div>
          </div>
        </section>
        <div class="container-fluid" id="product-offerings">
            <div class="row ml-3">
                <%  @products.each do |product| %>
                    <div class="col-sm-12 col-md-4 pb-3 d-flex align-items-stretch">
                        <div class="card see-cooking" style="width: 22rem;">
                            <div class="ribbon-wrapper">
                                <div class="ribbon green"> <%= product.plan_type_name %> </div>
                            </div>
                            <%= link_to product_path(product) do %>
                                <%= image_tag product.thumbnail.variant(resize: "450x450"), class:"card-img-top hover-gray" %>
                                <div class="textOverlay">
                                    <div class="showText">More Info</div>
                                </div>
                            <% end %>
                            <div class="card-body text-center">
                                <h5 class="card-title text-center"> <%= product.name %></h5>
                                <h6 class="card-subtitle mb-2 text-muted text-center"> <%= product.partner_name %></h6>
                                <p class="card-text text-center" id="overwrite-card-text"> <%= product.calories %> Calories, <%= product.protein %>g Protein, <%= product.carbs %> Carbs, <%=product.fats %>g Fats </p>
                                <% if logged_in? %>
                                    <% if current_user.admin? %>
                                        <%= link_to "More Info", product_path(product), class:"btn btn-success" %>
                                        <%= link_to "Edit Product", edit_product_path(product), class: "btn btn-warning" %>
                                        <%= link_to 'Delete Product', product_path(product), data: {confirm: "Are you sure you want to delete this product?"}, method: :delete, class: "btn btn-danger" %>
                                    <% end %>
                                <% end %> 
                            </div>
                        </div>
                    </div>       
                <% end %>
                <div class = "col-12 justifu-content-center">
                    <% if logged_in? %>
                        <% symbolize = @plan_type.name.downcase.to_sym %>
                        <%= link_to "GET STARTED", new_subscription_path(plan: @plan_type.name.downcase, plan_id: Rails.application.credentials.development.dig(symbolize), plan_name: @plan_type.name.downcase ), class: "btn btn-success jumbo-button" %>
                    <% else %>
                        <%= link_to "GET STARTED", signup_path, class: "btn btn-success jumbo-button" %>
                    <% end %>
                </div>
            <div>
        </div>
    </div>
</div>