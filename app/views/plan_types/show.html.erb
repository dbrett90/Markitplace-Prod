<% provide(:title, @plan_type.name) %>
<div class = "container recipe-overview  mt-4 justify-content-center">
  <section class= "container">
    <div class = "recipe-header pt-2">
      <div class = "row pb-5">
        <div class = "col-12 text-center pb-2">
          <h1 class =  "pb-1 title-mobile" style = "color: #073243"><%= @plan_type.name %> </h1>
        </div>
        <div class= "col-12 col-lg-6 text-center recipe-header-button">
          <%= image_tag(@plan_type.thumbnail, class:"img-fluid", alt: "Product Image") %>
        </div>
        <div class = "col-12 col-lg-6 text-center my-auto">
            <div class = "recipe-intro d-flex pt-3">
              <ul class= "stats list-inline mx-auto justify-content-center">
                <li class="list-inline-item">
                  <div class="stats-item subtitle-mobile">
                    $<%= number_with_precision(@plan_type.price, precision: 2) %>
                  </div>
                  <div class="stats-subitem subtitle-mobile">
                    Price
                  </div>
                </li>
                <li class="list-inline-item">
                  <div class="stats-item subtitle-mobile">
                    Serves <%= @plan_type.servings %>
                  </div>
                  <div class="stats-subitem subtitle-mobile">
                    Cocktail Kit Size
                  </div>
                </li>
              </ul>
            </div>
            <p class="description-text subtitle-mobile"> <%= @plan_type.description %></p>
            <button id="checkout-button" class= "btn btn-outline-success jumbo-button mt-2 btn-mobile" data-secret="<%= @session.id %>"> Subscribe </button>
        </div>
      </div>
    </div>
  </section>
</div>