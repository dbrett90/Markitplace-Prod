<% provide(:title, "Meal Kits Plans") %>
<div class="plan-homepage">
    <div class="plan-homepage-2019">
        <section class="jumbotron jumbotron-fluid home-jumbotron jumbotron-mobile" id='jumbotron-plans'>
          <div class="container">
            <div class="row text-left">
              <div class="col-7 col-lg-5 justify-content-center" id="jumbo-textbox">
                <h1 class="homepage-text shadow-underscore jumbo-maintext title-larger-mobile">Kit Options</h1>
                <h3 class ="homepage-text pt-3 pb-3" id ="jumbo-subtext">Check out the various plans available from our partners!</h3>
                <a href="#plan-offerings"><i class="fas fa-chevron-circle-down fa-3x scroll-down btn-fa-mobile" style="color: #449900;"></i></a>
              </div>
            </div>
          </div>
        </section>
        <div class="container" id="plan-offerings">
            <div class="row ml-3">
                <%  @plan_types.each do |plan_type| %>
                    <div class="col-12 col-lg-4 pb-3 d-flex align-items-stretch card-padding-mobile">
                        <div class="card see-cooking card-width">
                            <%= link_to plan_type_path(plan_type) do %>
                                <%= image_tag plan_type.thumbnail.variant(resize: "450x450"), class:"card-img-top hover-gray", alt: "Meal Kit Plan Image" %>
                                <div class="textOverlay align-middle text-center subtitle-description-mobile">
                                    <div class="showTextIndex align-middle text-center subtitle-description-mobile">See what&#39;s cooking</div>
                                </div>
                            <% end %>
                            <div class="card-body text-center">
                                <h5 class="card-title text-center title-card-mobile"> <%= plan_type.name %></h5>
                                <h6 class="text-center title-mobile">$<%= plan_type.price %></h6>
                                <h6 class="card-subtitle mb-2 text-muted text-center subtitle-description-mobile"> <%= plan_type.description %></h6>
                                <% if logged_in? %>
                                    <% if current_user.admin? %>
                                        <%= link_to "More Info", plan_type_path(plan_type), class:"btn btn-success btn-mobile" %>
                                        <%= link_to "Edit Plan", edit_plan_type_path(plan_type), class: "btn btn-warning btn-mobile" %>
                                        <%= link_to 'Delete Plan', plan_type_path(plan_type), data: {confirm: "Are you sure you want to delete this plan?"}, method: :delete, class: "btn btn-danger btn-mobile" %>
                                    <% elsif current_user.is_subscribed? %>
                                        <%= link_to "More Info", plan_type_path(plan_type), class:"btn btn-success btn-mobile" %>
                                    <% else %>
                                        <%= link_to "More Info", plan_type_path(plan_type), class:"btn btn-success btn-mobile" %>
                                    <% end %>
                                <% else %>
                                    <%= link_to "More Info", plan_type_path(plan_type), class:"btn btn-success btn-mobile" %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% end %>
            <div>
        </div>
    </div>
</div>