<% provide(:title, 'Change Password') %>
<div class='container'>
  <div class="row topspace-lg justify-content-center">
    <div class= "col-12">
      <h1 style= "text-align: center">Change Password</h1>
    </div>
    <div class="card col-md-6 col-md-offset-3">
      <div class="card-body placeholder">
        <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
          <%= render 'shared/error_messages' %>

          <%= hidden_field_tag :email, @user.email %>

          <%= f.label :password, class: 'field-label emphasis' do %>
            <span class = 'field-label emphasis'> Password </span><br>
          <% end %><br>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.label :password_confirmation, class: 'field-label emphasis' do %>
            <span class = 'field-label emphasis'> Password Confirmation </span><br>
          <% end %><br>
          <%= f.password_field :password_confirmation, class: 'form-control' %>

          <%= f.submit "Update password", class: "btn btn-success btn-block" %>
        <% end %>
      </div>
    </div>  
  </div>
</div>