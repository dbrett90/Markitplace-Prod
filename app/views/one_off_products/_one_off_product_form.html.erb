<%= form_for(@one_off_product) do |f| %>
    <p class="subtext-gray pb-1" style="font-size:14px">Only admins should be able to
    access this page. Updating Product Types </p>

    <%= f.text_field :name, class: 'form-control', placeholder: "Name", required: true %><br>

    <%= f.text_field :partner_name, class: 'form-control', placeholder: "Partner Name - Make sure spelling is the same", required: true %><br>

    <%= f.text_field :description, class: 'form-control', placeholder: "Product Description - 2 Sentences", required: true %><br>

    <%= f.text_field :extended_description, class: 'form-control', placeholder: "Extended Product Description", required: true %><br>

    <%= f.text_field :available_cities, class: 'form-control', placeholder: "City list - put names in lowercase separated by commas. Blank if no restriction." %><br>

    <%= f.text_field :delivery_schedule, class: 'form-control', placeholder: "Please explain the delivery schedule succinctly" %><br>

    <%= f.text_field :partner_background_link, class: 'form-control', placeholder: "Insert link to partner background" %><br>

    <%= f.text_field :prep_time, class: 'form-control', placeholder: "Prep Time", required: true %><br>

    <%= f.number_field :calories, class: 'form-control', placeholder: "Calories" %><br>

    <%= f.number_field :fats, class: 'form-control', placeholder: "Fats" %><br>

    <%= f.number_field :servings, class: 'form-control', placeholder: "How many people does this kit serve?" %><br>

    <%= f.number_field :price, class: "form-control", placeholder: "Product Price", required: true %><br>

    <%= f.text_field :stripe_id, class: 'form-control', placeholder: "Stripe ID of Partner", required: true %><br>

    <%= f.text_field :is_trial, class: 'form-control', placeholder: "Is trial? No app fee is so, yes or no", required: true %><br>

    <%= f.text_field :out_of_stock, class: 'form-control', placeholder: "Out Of Stock? Put Yes to redirect home" %><br>

    <%= f.label :thumbail do %>
        <span class = 'field-label emphasis'> Product Type Image </span><br>
    <% end %><br>
    <%= f.file_field :thumbnail, multiple: false, required: true %> <br>
    <br>

    <%= f.submit "Submit", class: "btn btn-success btn-block form-actions" %><br>
<% end %>