<% provide(:title, 'Show Product') %>
<section class= "container pt-3 recipe-overview">
  <div class = "recipe-header">
    <div class = "row">
      <div class = "col-8 recipe-header-text">
        <h1><%= @product.name %> </h1>
        <p>This is going to be some sample text until we build header text into 
        the model</p>
      </div>
      <div class= "col-4 reciper-header-button">
        <%= link_to "START COOKING", new_subscription_path, class:"btn btn-outline-success jumbo-button" %>
      </div>
    </div>
  </div>
  <div class = "recipe-intro">
    <%= image_tag @product.thumbnail %>
    <ul class="stats">
      <li>
        <div class="stats-item">
          <%= @product.calories %>
        </div>
        <div>
          Calories 
        </div>
      </li>
      <li>
        <div class="stats-item">
          <%= @product.fats %>
        </div>
        <div>
          Grams of Fat
        </div>
      </li>
      <li>
        <div class="stats-item">
          <%= @product.carbs %>
        </div>
        <div>
          Carbs
        </div>
      </li>
    </ul>
  </div>
  <% if logged_in? %>
    <% if current_user.admin? %>
      <%= link_to 'Edit Product', edit_product_path(@product), class: "btn btn-warning" %>
      <%= link_to 'Delete Product', product_path(@product), method: :delete, class: "btn btn-danger" %>
    <% end %>
  <% end %>
</section>