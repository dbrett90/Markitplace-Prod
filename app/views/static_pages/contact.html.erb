<% provide(:title, "Contact") %>
<div class="contact-us">
<section class="jumbotron jumbotron-fluid" id="jumbotron-contact">
  <div class="container">
    <div class="row justify-content-end">
      <div class="col-12 col-lg-6" >
        <h1 class="homepage-text shadow-underscore jumbo-maintext">CONTACT US</h1>
        <h3 class ="homepage-text pt-3 pb-3 jumbo-subtext">We love hearing from our users! Contact us
          anytime and we will get back to you as soon as possible.</h3>
      </div>
    </div>
  </div>
</section>
<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="form-block">
        <%= form_tag '/contact' do%>
          Name : </br><%= text_field_tag 'contact_name',  class:"form-control", placeholder:"Enter your Name, ''%></br>
          Email : </br><%= text_field_tag 'contact_email',  class:"form-control", placeholder:"Enter your email, ''%></br>
          How Did you Hear about Markitplace? :<%= text_area_tag 'contact_how',  class:"form-control", ''%></br>
          How can we help you today? :<%= text_area_tag 'contact_help',  class:"form-control",  ''%></br>
          <%= submit_tag "submit",:value => "submit",  class: "btn btn-success jumbo-button mt-2, ""%>
        <%end%>
      </div>
    </div>
    <div class="col-4">
      <div class="lets-chat-title">
        Let&apos;s chat.
      </div>
      <div class="lets-chat">
        +1 (207) 767-3433 <br>
        support@markitplace.io
      </div>
      <div class="lets-chat">
        Markitplace Co.<br>
        101 Monmouth Street <br>
        Brookline, MA<br>
        02446
      </div>
    </div>
  </div>
</div>
</div>